{
  "name": "edgar-query-app",
  "version": "1.0.0",
  "description": "Natural language query interface for SEC EDGAR database",
  "scripts": {
    "dev": "cd backend && npm run dev",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:frontend\"",
    "build": "cd frontend && npm run build",
    "start": "cd backend && npm start",
    "deploy": "vercel --prod",
    "mcp:status": "curl -s http://localhost:3000/api/v1/mcp/status | jq .",
    "mcp:tools": "curl -s http://localhost:3000/api/v1/mcp/tools | jq .",
    "mcp:test": "curl -s -X POST http://localhost:3000/api/v1/mcp/test-tools | jq .",
    "test:query": "curl -s -X POST http://localhost:3000/api/v1/queries -H 'Content-Type: application/json' -d '{\"query\": \"What was Apple\\\"s revenue in 2024?\"}' | jq ."
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.24.0",
    "@upstash/redis": "^1.25.1",
    "@vercel/node": "^3.0.12",
    "cors": "^2.8.5",
    "dotenv": "^17.2.0",
    "express": "^5.1.0",
    "openai": "^4.20.1",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.10.9",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
